<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirstMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FirstMaui"
    Shell.FlyoutBehavior="Disabled">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

    <TabBar>
        <ShellContent
            Title="Crab Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="icon_notes" />

        <ShellContent
            Title="Crabcount"
            ContentTemplate="{DataTemplate local:Accounts}"
            Icon="icon_account" />

        <ShellContent
            Title="Crab News"
            ContentTemplate="{DataTemplate local:CrabNews}"
            Icon="icon_news" />

        <ShellContent
            Title="Crab Facts"
            ContentTemplate="{DataTemplate local:Crabfacts}"
            Icon="icon_facts" />
    </TabBar>

</Shell>
